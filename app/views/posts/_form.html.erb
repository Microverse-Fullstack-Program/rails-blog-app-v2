<%= form_with(model:  @post, url: user_posts_path, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div style="color: red">
      <h3><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>

      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-elements">
    <%= form.label :title %>
    <%= form.text_field :title, name: 'post[title]' %>
  </div>

  <div class="form-elements">
    <%= form.label :text %>
    <%= form.text_area :text, name: 'post[text]' %>
  </div>

  <div class="grp-buttons">
      <div class="btn-link">
        <%= form.submit 'Create' %>
      </div>
      <div class="btn-link">
        <%= link_to "Cancel", user_path(@user.id) %>
      </div>
  </div>

<% end %>